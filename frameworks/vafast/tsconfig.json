{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "outDir": "dist", // 🍭 输出目录
    "declaration": true, // 生成类型定义
    "emitDeclarationOnly": false // 是否只输出类型定义，false 表示也输出实现代码
  },
  "include": ["src/**/*"], // 🎯 只编译核心源码
  "exclude": ["node_modules", "dist", "examples", "tests", "benchmarks"] // 🧹 忽略的目录
}
